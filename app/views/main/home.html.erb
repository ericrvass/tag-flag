<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t('search_title') %></h3>
      </div>
      <div class="panel-body">
        <%= form_tag(search_path(), :method => :post, :remote => true, :id => "search_form", :role => "form") do %>
          <div class="form-group">
            <label for="html_block"><%= t('search_form.html_input_label') %></label>
            <%= text_area_tag 'html_block[]', nil, :rows => 6, :class => "form-control html-input" %>
          </div>
          <%= link_to "<div class='btn btn-sm btn-default'>+</div>".html_safe, "#", class: "add_search_input_link" %>
          <div style="clear:both;"></div>
          <div class="form-group">
            <label for="url"><%= t('search_form.url_input_label') %></label>
            <%= text_field_tag 'url', nil, :class => "form-control" %>
          </div>
          <%= submit_tag t('search_form.submit'), :class => "btn btn-primary", :id => "submit_button", :data => {'loading-text' => t('loading')} %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <div id="result"></div>
  </div>
</div>